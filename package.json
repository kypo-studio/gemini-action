{
  "name": "ci-cd-ia",
  "version": "1.0.0",
  "description": "API Node.js avec CI/CD GitLab et GitHub Actions",
  "main": "src/app.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --coverage --coverageDirectory=coverage/unit --testMatch='**/tests/unit/**/*.test.js' --passWithNoTests",
    "test:e2e": "jest --coverage --coverageDirectory=coverage/e2e --testMatch='**/tests/e2e/**/*.test.js'",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "api",
    "nodejs",
    "ci-cd",
    "gitlab",
    "github-actions"
  ],
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
